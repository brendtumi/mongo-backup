{
  "name": "mongodbbackup",
  "version": "2.0.0",
  "description": "Cli for Automated MongoDB backup",
  "author": "Tumay Ceber <tumayceber@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brendtumi/mongo-backup/issues"
  },
  "homepage": "https://github.com/brendtumi/mongo-backup#readme",
  "main": "./lib/index.js",
  "scripts": {
    "format": "prettier --write '**/*.{js,md}'",
    "lint": "eslint **/*.js --fix",
    "test": "./bin/mbk backup ./test/conf.json --debug=true",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brendtumi/mongo-backup.git"
  },
  "keywords": [
    "mongodb",
    "mongo",
    "backup",
    "s3",
    "mongo s3 backup",
    "email notification",
    "http notification",
    "aws"
  ],
  "preferGlobal": true,
  "bin": {
    "mongo-backup": "./bin/mongo-backup",
    "mbk": "./bin/mbk"
  },
  "dependencies": {
    "async": "^2.5.0",
    "aws-sdk": "^2.358.0",
    "chalk": "^1.1.3",
    "commander": "^2.11.0",
    "cron": "^1.3.0",
    "dropbox": "^10.32.0",
    "graceful-fs": "^4.1.11",
    "jsonfile": "^2.4.0",
    "moment": "^2.22.2",
    "mongodb": "^2.2.31",
    "node-alias": "^1.0.4",
    "nodemailer": "^2.7.2",
    "progress": "^1.1.8",
    "request": "^2.88.0",
    "tmp": "0.0.31",
    "update-notifier": "^1.0.3"
  },
  "files": [
    "bin",
    "lib"
  ],
  "engines": {
    "node": ">=4.4.5"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "npm run format",
      "npm run lint",
      "git add"
    ]
  },
  "devDependencies": {
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "husky": "^1.1.4",
    "lint-staged": "^8.0.5",
    "prettier": "^1.15.2"
  }
}
